{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        // poder usar decorators, não quer dizer que é experimental, e que a linguagem ainda não consolidou os decorators
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "undici-types": ["node_modules/undici-types"]
        }
    },
    "include": ["app/src/**/*"]
}
